<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
        "http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>
	
	<package name="root" namespace="/" extends="struts-default" >
		<action name="login" class="com.city.oa.action.LoginAction" method="login">
		    <result name="login">/login.jsp</result>
		    <result name="main" type="redirect">/main.jsp</result>
		</action>
	
	</package>
	<package name="r" namespace="/" extends="struts-default" >
		<action name="logout" class="com.city.oa.action.LogoutAction" method="logout">
		    <result name="login">/login.jsp</result>
		</action>
	
	</package>
</struts>
