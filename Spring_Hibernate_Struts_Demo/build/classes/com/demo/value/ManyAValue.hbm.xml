<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="com.demo.value">

    <class name="ManyAValue" table="ManyA" lazy="true">
        <id name="aid" column="aid">
        </id>
        <property name="name"/>
        
        <!-- ManyA_ManyB表把ManyA表和ManyB表相关联
        	其中只有相关联表的外键，如aid、bid -->
        <set name="bs" table="ManyA_ManyB" inverse="true">
        	<key column="aid"></key>
        	<many-to-many class="ManyBValue" column="bid"></many-to-many>
        </set>
        
    </class>
</hibernate-mapping>
