<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="com.city.oa.value">

    <class name="DepartmentValue" table="oa_department" lazy="false">
        <id name="no" column="DEPTNO" type="int">
            <generator class="identity"/>
        </id>
        <property name="code" column="DEPTCODE" type="string" />
        <property name="name" column="DEPTNAME" />
        
        <set name="employees" table="oa_employee" cascade="delete">
        	<key column="DEPTNO"></key>
        	<one-to-many class="EmployeeValue"/>
        </set>
        
    </class>

</hibernate-mapping>
